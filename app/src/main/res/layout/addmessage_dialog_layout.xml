<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/entry_title"
        android:textColor="@color/colorBoldText"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/entry_author"
        android:textColor="@color/colorText" />

    <EditText
        android:id="@+id/edittext_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/colorPrimaryOrange"
        android:textColor="@color/colorPrimaryDark" />
    <TextView
        android:id="@+id/textview_empty_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBoldText"
        android:visibility="gone" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/entry_place"
        android:textColor="@color/colorText" />
    <Spinner
        android:id="@+id/spinner_place"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:background="@drawable/spinner_icon"></Spinner>

    <!--<EditText-->
        <!--android:id="@+id/edittext_place"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginBottom="5dp"-->
        <!--android:background="@color/colorPrimaryOrange"-->
        <!--android:textColor="@color/colorPrimaryDark" />-->
    <TextView
        android:id="@+id/textview_empty_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBoldText"
        android:visibility="gone" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/entry_description"
        android:textColor="@color/colorText" />

    <EditText
        android:id="@+id/edittext_description"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorPrimaryOrange"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/textview_empty_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBoldText"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_cancal_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryTransparent"
            android:text="@string/cancal_button_text"
            android:textColor="@color/colorBoldText" />

        <Button
           android:layout_alignParentRight="true"
            android:id="@+id/button_add_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryTransparent"
            android:text="@string/add_button_text"
            android:textColor="@color/colorBoldText" />

    </RelativeLayout>
</LinearLayout>